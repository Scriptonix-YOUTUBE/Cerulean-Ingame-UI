
print'\nSynapse UI: Version 1\nloaded'



local CoreGui = game:GetService'CoreGui'

local RobloxLoadingGui = CoreGui:WaitForChild'RobloxLoadingGui' 

local BlackFrame = RobloxLoadingGui:WaitForChild'BlackFrame' 

local LoadingImage = BlackFrame:WaitForChild'GraphicsFrame':WaitForChild'LoadingImage' 

local InfoFrame = BlackFrame:WaitForChild'InfoFrame'

local PlaceIcon = InfoFrame:WaitForChild'PlaceIcon'

local CreatorLabel = InfoFrame:WaitForChild'CreatorLabel'

local PlaceLabel = InfoFrame:WaitForChild'PlaceLabel'

local UiMessage = InfoFrame:WaitForChild'UiMessageFrame':WaitForChild'UiMessage'

local UIListLayout = InfoFrame:WaitForChild'UIListLayout'



UIListLayout.VerticalAlignment = Enum.VerticalAlignment.Center

UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Left

UIListLayout.FillDirection = Enum.FillDirection.Vertical


InfoFrame.Position = UDim2.new(0.39,0,0.634,0)


UiMessage.Font = Enum.Font.Nunito

UiMessage.TextXAlignment = Enum.TextXAlignment.Left


CreatorLabel.TextXAlignment = Enum.TextXAlignment.Left

CreatorLabel.Font = Enum.Font.Code

CreatorLabel.TextColor3 = Color3.fromRGB(112, 112, 112)

CreatorLabel.TextStrokeTransparency = 1


PlaceLabel.Font = Enum.Font.SourceSansSemibold

PlaceLabel.TextColor3 = Color3.fromRGB(255, 255, 255)

PlaceLabel.TextXAlignment = Enum.TextXAlignment.Left


PlaceIcon.BorderColor3 = Color3.fromRGB(53,53,53)

PlaceIcon.BorderSizePixel = 3

PlaceIcon.BackgroundTransparency = 0

PlaceIcon.BackgroundColor3 = Color3.fromRGB(0,0,0)


LoadingImage.BackgroundColor3 = Color3.fromRGB(200,200,200)

LoadingImage.Image = 'rbxassetid://2093843497' 

LoadingImage.ImageColor3 = Color3.fromRGB(180,180,180)


BlackFrame.BackgroundColor3 = Color3.fromRGB(39,39,39) 

BlackFrame:GetPropertyChangedSignal'BackgroundTransparency':Connect(function()
	local Transparency = BlackFrame.Transparency
	if Transparency ~= 0 then
		PlaceIcon.BackgroundTransparency = Transparency
	end
end)



local TopBar = CoreGui:WaitForChild'TopBar'

local Icon = TopBar:WaitForChild'TopBarFrame':WaitForChild'LeftFrame':WaitForChild'MenuIcon':WaitForChild'Background':WaitForChild'Icon'


print'\nSynapse x loading screen done'


Icon.Image = 'rbxassetid://2530517466'


RobloxLoadingGui:Clone().Parent = workspace
